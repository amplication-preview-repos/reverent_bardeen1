datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  article   Article?  @relation(fields: [articleId], references: [id])
  articleId String?
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  postedAt  DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Article {
  comments    Comment[]
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishedAt DateTime?
  source      Source?   @relation(fields: [sourceId], references: [id])
  sourceId    String?
  summary     String?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Source {
  articles   Article[]
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  name       String?
  updatedAt  DateTime  @updatedAt
  websiteUrl String?
}

model User {
  comments  Comment[]
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}
